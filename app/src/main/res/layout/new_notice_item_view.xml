<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview_date"
    android:layout_width="400dp"
    android:layout_height="120dp"
    android:layout_margin="6dp"
    android:padding="6dp"
    app:cardBackgroundColor="@color/colorï¼·hite"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="397dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/photoIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/n1" />

        <TextView
            android:id="@+id/empidTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="empid(HECNAME)"
            android:textColor="@color/colorBalk"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/photoIv"
            app:layout_constraintTop_toTopOf="@+id/photoIv" />

        <TextView
            android:id="@+id/noteTv"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="note"
            android:textColor="@color/colorBalk"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/photoIv"
            app:layout_constraintStart_toStartOf="@+id/empidTv" />

        <ImageView
            android:id="@+id/timeIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/noteTv"
            app:layout_constraintTop_toBottomOf="@+id/noteTv"
            app:srcCompat="@drawable/n2" />


        <TextView
            android:id="@+id/timeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="00:00"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/timeIv"
            app:layout_constraintTop_toTopOf="@+id/timeIv"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/nWeekTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:text="TextView"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.31" />

        <TextView
            android:id="@+id/nDateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/nWeekTv"
            app:layout_constraintTop_toBottomOf="@+id/nWeekTv"
            app:layout_constraintVertical_bias="0.054" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>